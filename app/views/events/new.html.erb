
<h2>売上入力</h2>

<%= form_with(model: @event, local: true) do |form| %>
 <div class="sales">
  <div class="client">
    <%= form.label :お客様名 %>
    <%= form.text_field :client %>
  </div>

    <div class="time">
    <%= form.label :日にち %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :売上 %>
    <%= form.text_field :sales %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>
 </div>
<% end %>